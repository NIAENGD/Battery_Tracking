<Window
    x:Class="BatteryTracker.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Battery Tracker — Inception Dashboard"
    Width="600"
    Height="420">
    <Grid Padding="24" RowDefinitions="Auto,Auto,*" RowSpacing="16">
        <StackPanel Orientation="Vertical" Spacing="8">
            <TextBlock Text="Battery Tracker — Inception Dashboard" FontSize="24" FontWeight="SemiBold" />
            <TextBlock Text="Phase 1 prototype to validate telemetry capture and storage decisions." Opacity="0.7" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="12">
            <InfoBar IsOpen="True" Severity="Success" Title="Status" Message="{Binding StatusMessage, Mode=OneWay}" />
            <TextBlock Text="Sampling policy" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SamplingPolicyDescription, Mode=OneWay}" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Start session" Command="{Binding StartSessionCommand}" />
                <Button Content="Stop session" Command="{Binding StopSessionCommand}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Session active:" FontWeight="SemiBold" />
                <TextBlock Text="{Binding IsSessionRunning, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Started at:" FontWeight="SemiBold" />
                <TextBlock Text="{Binding SessionStartTime, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16">
            <TextBlock TextWrapping="WrapWholeWords">
                Phase 1 outcomes:
                • Validated WinRT aggregate battery telemetry through prototype sensor adapter.
                • Established SQLite storage schema with metrics and sessions tables.
                • Defined sampling policy cadences and retention guidance.
                Use the controls above to trigger manual sessions when running on Windows on ARM hardware.
            </TextBlock>
        </Border>
    </Grid>
</Window>
